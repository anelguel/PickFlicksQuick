
@{
    ViewBag.Title = "Welcome";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h2>Welcome @Session["Username"].ToString()</h2>
    <h2>Movie Form</h2>
   
    <div class="container">
        <form action="GetData" method="post">
            <br />
            <fieldset>

                Genre:<br>
                <select name="genre">
                    <option value="28">Action</option>
                    <option value="12">Adventure</option>
                    <option value="16">Animation</option>
                    <option value="80">Crime</option>
                    <option value="99">Documentary</option>
                    <option value="18">Drama</option>
                    <option value="27">Horror</option>
                    <option value="10749">Romance</option>
                </select><br />

                Filter by Release Date:<br>
                <select name="primaryReleaseDate">
                    <option value="primary_release_date.gte=1900-01-01&primary_release_date.lte=1959-12-31">1900's - 1950's</option>
                    <option value="primary_release_date.gte=1960-01-01&primary_release_date.lte=1969-12-31">1960's</option>
                    <option value="primary_release_date.gte=1970-01-01&primary_release_date.lte=1979-12-31">1970's</option>
                    <option value="primary_release_date.gte=1980-01-01&primary_release_date.lte=1989-12-31">1980's</option>
                    <option value="primary_release_date.gte=1990-01-01&primary_release_date.lte=1999-12-31">1990's</option>
                    <option value="primary_release_date.gte=2000-01-01&primary_release_date.lte=2009-12-31">2000's</option>
                    <option value="primary_release_date.gte=2010-01-01&primary_release_date.lte=2017-11-01">2010 - current</option>

                </select><br />

                Filter by vote:<br>
                <select name="VoteAverage">
                    <option value="vote_average.gte=0&vote_average.lte=5">Obscure hipster "good-bad" film</option>
                    <option value="vote_average.gte=5&vote_average.lte=10">An actual good movie</option>
                </select><br />

                <input type="submit" value="Find your movie"> <input type="reset"><br>

            </fieldset>




        </form>
    </div>




</body>
</html>


